<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:contentDescription=" "
    android:orientation="vertical"
    android:weightSum="1" >

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_weight="0.27"
        android:baselineAligned="true" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="114dp"
            android:layout_height="114dp"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="10dip"
            android:contentDescription="@string/textLogo"
            android:src="@drawable/tuk_logo" >

        </ImageView>

        <LinearLayout
            android:id="@+id/ll3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:orientation="vertical"
            android:weightSum="1" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.40"
                android:gravity="center"
                android:text="@string/siteName"
                android:textAppearance="?android:attr/textAppearanceLarge" >
            </TextView>

            <TextView
                android:id="@+id/txtUserName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.10"
                android:gravity="center_horizontal"
                android:text="@string/DefaultName"
                android:textAppearance="?android:attr/textAppearanceMedium" >

            </TextView>

            <LinearLayout
                android:id="@+id/countLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" >

                <ImageView
                    android:id="@+id/countPillarImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/textPillar"
                    android:src="@drawable/t_pillar" />

                <TextView
                    android:id="@+id/countPillarText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <ImageView
                    android:id="@+id/countFbmImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/textFBM"
                    android:src="@drawable/t_fbm" />

                <TextView
                    android:id="@+id/countFbmText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <ImageView
                    android:id="@+id/countPassiveImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/textPassive"
                    android:src="@drawable/t_passive" />

                <TextView
                    android:id="@+id/countPassiveText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <ImageView
                    android:id="@+id/countIntersectedImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/textIntersected"
                    android:src="@drawable/t_intersected" />

                <TextView
                    android:id="@+id/countIntersectedText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/syncLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.20" >

                <ImageView
                    android:id="@+id/countUnsyncedImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/textUnsynced"
                    android:src="@drawable/cs_nolog" />

                <TextView
                    android:id="@+id/countUnsyncedText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="4dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/syncNow" />

                <ImageView
                    android:id="@+id/countPhotosImage"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_menu_camera_h" />

                <TextView
                    android:id="@+id/countPhotosText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="4dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/syncNow" />
                
                </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btnNearest"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_weight="1.00"
            android:height="100px"
            android:text="@string/btnNearest" >
        </Button>

        <Button
            android:id="@+id/btnMap"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:height="100px"
            android:text="@string/btnMap" >
        </Button>

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:height="100px"
            android:text="@string/btnSearch" >
        </Button>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btnSync"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnSync" >
        </Button>

        <Button
            android:id="@+id/btnCrash"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnCrash" >
        </Button>
    </LinearLayout>

</LinearLayout>