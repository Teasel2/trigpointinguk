<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <TableLayout
      android:orientation="vertical"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent">
        <TableRow>
                <TextView
                android:layout_column="1"
                android:text="Name:"
                android:padding="3dip" android:layout_width="wrap_content"/>
            <TextView
                android:text=""
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:padding="3dip" android:layout_width="wrap_content" android:gravity="left|right" android:id="@+id/triginfo_name"/>
        </TableRow>
    
        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="Waypoint:"
                android:padding="3dip" />
            <TextView
                android:text=""
                android:padding="3dip" android:gravity="left|right" android:id="@+id/triginfo_waypoint" android:textStyle="bold"/>
        </TableRow>
    
        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="Gridref:"
                android:padding="3dip" />
            <TextView
                android:text=""
                android:padding="3dip" android:gravity="left|right" android:id="@+id/triginfo_gridref" android:textStyle="bold"/>
        </TableRow>
        
    
        <TableRow android:layout_height="wrap_content" android:layout_width="wrap_content">
            <TextView
                android:layout_column="1"
                android:text="WGS84:"
                android:padding="3dip" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
            <TextView
                android:text=""
                android:padding="3dip" android:gravity="left|right" android:id="@+id/triginfo_wgs84" android:textStyle="bold" android:layout_width="wrap_content" android:maxLines="3"/>
        </TableRow>
        
    
        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="Type:"
                android:padding="3dip" />
            <TextView
                android:text=""
                android:padding="3dip" android:gravity="left|right" android:id="@+id/triginfo_type" android:textStyle="bold"/>
        </TableRow>
        
    
        <TableRow android:baselineAligned="true">
            <TextView
                android:layout_column="1"
                android:text="Condition:"
                android:padding="3dip" />
            <LinearLayout
                android:id="@+id/condll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0">
                <ImageView android:src="@drawable/c_good" android:layout_height="fill_parent" android:layout_width="wrap_content" android:id="@+id/triginfo_condition_icon"></ImageView>
                <TextView android:layout_weight="2" android:text="" android:gravity="left|right" android:padding="3dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/triginfo_condition" android:textStyle="bold"></TextView>
            </LinearLayout>
        </TableRow>
    
    
        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="Current Use:"
                android:padding="3dip" />
            <TextView
                android:text=""
                android:padding="3dip" android:gravity="left|right" android:id="@+id/triginfo_current" android:textStyle="bold"/>
        </TableRow>
    
    
        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="Historic Use:"
                android:padding="3dip" />
            <TextView
                android:text=""
                android:padding="3dip" android:gravity="left|right" android:id="@+id/triginfo_historic" android:textStyle="bold"/>
        </TableRow>
    
        <TableRow>
            <TextView
                android:layout_column="1"
                android:text="Flush Bracket:"
                android:padding="3dip" />
            <TextView
                android:text=""
                android:padding="3dip" android:gravity="left|right" android:id="@+id/triginfo_fb" android:textStyle="bold"/>
        </TableRow>
        <TableRow>

            <CheckBox
                android:id="@+id/mark"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginTop="20dp"
                android:text="@string/markTrig" />
		</TableRow>
        </TableLayout>
</ScrollView>
