<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/svlp1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top" >

    <LinearLayout
        android:id="@+id/logphoto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/photoThumb"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/photoThumbnail"
            android:src="@drawable/imageloading" >
            <requestFocus/>
        </ImageView>

        <TextView
            android:id="@+id/textViewlp1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.05"
            android:text="@string/photoName"
            android:textAppearance="?android:attr/textAppearanceMedium" >
        </TextView>

        <EditText
            android:id="@+id/photoName"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05"
            android:inputType="text" >
        </EditText>

        <TextView
            android:id="@+id/textViewlp2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.05"
            android:text="@string/photoDescr"
            android:textAppearance="?android:attr/textAppearanceMedium" >
        </TextView>
       
       <EditText
            android:id="@+id/photoDescr"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05"
            android:ems="10"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:lines="5" >
        </EditText>
        
        <TextView
            android:id="@+id/textViewlp3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.05"
            android:text="@string/photoSubject"
            android:textAppearance="?android:attr/textAppearanceMedium" >
        </TextView>

 
        <Spinner
            android:id="@+id/photoSubject"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05">
        </Spinner>

        <CheckBox
            android:id="@+id/photoIsPublic"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.05"
            android:text="@string/photoIsPublic" >
        </CheckBox>

        <LinearLayout
            android:id="@+id/ll7"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_weight="0.05" >

            <Button
                android:id="@+id/photoSave"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/photoSave" >
            </Button>

            <Button
                android:id="@+id/photoRemove"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/photoRemove" >
            </Button>
        </LinearLayout>
    </LinearLayout>

</ScrollView>